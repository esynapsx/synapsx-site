---
const { text, srcImg, onClick } = Astro.props;

---


<div class="card">
    <img decoding="async" loading="lazy" alt="" src={srcImg}>
    <div class="content">
        <h3>{text}</h3>
        <div class="description">
            <p>...</p>
            <button onclick={onClick}>Read More</button>
        </div>
    </div>
</div>


<style>
    .card {
        padding: 5px;
        display: flex;
        flex-wrap: nowrap;
        flex-direction: column;
        align-items: flex-start;
        box-shadow: 0 4px 20px rgba(52, 52, 87, 0.08);
        border-radius: 20px;
        background-color: var(--white);
        width: 300px;
        height: 350px;
        transition: all 200ms ease-out;

        h3 {
            font-size: 1rem;
            text-align: center;
        }

        .content {
            width: 100%;

            .description {
                text-align: center;
                display: none;
                margin: 0;
            }
        }

        img {
            border-radius: 20px;
            transition: all 200ms ease-out;
            object-fit: cover;
            width: 100%;
            height: 300px;
        }

        &:hover {
            img {
                height: 200px;
            }
            .description {
                display: block;
            }
        }
    }

    button {
        cursor: pointer;
        transition: all 0.2s;
        padding: 5px 10px;
        border-radius: 100px;
        background-color: var(--aqua-main);
        border: 1px solid transparent;
        font-size: 15px;
        color: var(--white);
        width: 50%;
    }

    button:hover {
        background: var(--aqua-accent);
    }
</style>