<style>
	main {
		margin: 0;
		display: flex;
		align-items: center;
		flex-flow: column nowrap;
	}

	.hero {
		position: relative;
		width: 100%;
		height: calc(100svh - 100px);
		animation-name: opacityAndWidth;
		animation-duration: 1ms; /* Firefox requires this to apply the animation */
		animation-direction: alternate;
		animation-timeline: scroll(block nearest);

		.background {
			height: calc(100svh - 100px);
			width: 40%;
			position: absolute;
			top:0;
			left:0;
			z-index: 1;
			background-image: url('/img/hero_bg.png');
		}

		.overlay {
			height: calc(100svh - 100px);
			width: 100%;
			position: absolute;
			top:0;
			left:0;
			z-index: 2;
			background-color: rgba(0,0,0, 0.5);
		}
	}

	.video-container {
		z-index: 1;
	}

	#video-intro {
		width: 100%;
		height: 100%;
		position: absolute;
		object-fit: cover;
	}

	.text-content {
		width: 50%;
		font-size: 3rem;
		color: rgba(255, 255, 255, 1);
		text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
		position: absolute;
		left: 40%;
		top: 50%;
		transform: translate(-50%, -50%);
		z-index: 2;

		h5 {
			font-weight: 100;
		}
	}


	.sentence {
		position: relative;
		width: 100%;
		height: 500px;
		display: flex;
		flex-flow: column;
		justify-content: center;
		text-align: center;
		align-items: center;
		animation-name: opacityAndWidthIn;
		animation-duration: 1ms; /* Firefox requires this to apply the animation */
		animation-direction: initial;
		animation-timeline: view();
	}

	.section1 {
		margin: 5rem 0;
		width: 100%;
		min-height: 80svh;
		background-image: url('/img/white_ background.png');
		background-size: cover;

		.container {
			padding: 2rem;
		}
		p {
			font-weight: 200;
			color: #333333;
		}

		.container-cards {
			padding: 3rem 0;
			display: flex;
			flex-flow: row wrap;
			gap: 1rem;
			justify-content: space-evenly;
		}
	}

	.section2 {
		margin: 5rem 0;
		padding: 5rem 0;
		min-height: 70svh;
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		align-items: center;
		background-image: url('/img/dark_grey_background.png');
		background-size: cover;

		.container {
			display: flex;
			flex-flow: row wrap;
			justify-content: center;
			gap: 5rem;
		}


		.card {
			width: 300px;
			height: 500px;
			border-radius: 20px;
			background-color: var(--white);
			display: flex;
			justify-content: center;
			align-items: center;

			.container_img {
				border-radius: 20px;
				height: 95%;
				width: 90%;
				background-image: url('/img/index/ev4.webp');
				background-size: cover;
			}
		}

		.text {
			width: 50%;

			p {
				padding: 2rem 0;
				font-size: 1.5rem;
			}
		}
	}


	.section3 {
		margin: 5rem 0;
		width: 100%;
		min-height: 80svh;
		background-image: url('/img/white_ background.png');
		background-size: cover;

		.container {
			padding: 2rem;
		}
		p {
			font-weight: 200;
			color: #333333;
		}

		.container-cards {
			padding: 3rem 0;
			display: flex;
			flex-flow: row wrap;
			gap: 1rem;
			justify-content: space-evenly;
		}
	}


	.section_mobile {
		margin: 5rem 0 0 0;
		width: 100%;
		min-height: 80svh;
		background-color: #f5f5f5;
		display: flex;
		flex-flow: column wrap;
		justify-content: center;
		align-items: center;
		gap: 5rem;

		.container {
			padding: 2rem;
		}

		.content1 {
			width: 100%;
			display: flex;
			flex-flow: row wrap;
			align-items: center;
			justify-content: space-evenly;

			img {
				height: 300px;
			}
		}

		.content2 {
			width: 100%;
			display: flex;
			flex-flow: row wrap;
			align-items: center;
			justify-content: center;
			gap: 5rem;

			.card {
				border-radius: 20px;
				background-color: var(--white);
				height: 100px;
				padding: 1rem;
				display: flex;
				flex-flow: row wrap;
				gap: 1rem;
				align-items: center;
				cursor: pointer;
				justify-content: space-between;

				.qrcode {
					height: 100%;
				}

				.icon {
					height: 50px;
				}

				h3 {
					margin: 0;
					padding-bottom: 1rem;
				}

				p {
					margin: 0;
					font-size: 1rem;
				}
			}
		}
	}


	.property {
		margin: 5rem 0;
		width: 100%;
		.container {
			padding: 2rem;
		}
	}

	.mobile {
		display: flex !important;
		flex-flow: column wrap;
		justify-content: center;


		.heading {
			padding: 2rem;
			display: flex;
			flex-flow: row wrap;
			justify-content: space-evenly;
		}

		.text {
			align-self: center;
			font-size: 1.2rem;
			animation-name: textAnimation;
			animation-duration: 1ms; /* Firefox requires this to apply the animation */
			animation-direction: initial;
			animation-timeline: view(block);
		}

		.mockup {
			width: 200px;
			padding-top: 60px;
			animation-name: mockupAnimation;
			animation-duration: 1ms; /* Firefox requires this to apply the animation */
			animation-direction: initial;
			animation-timeline: view(block);
		}
	}

	@media screen and (max-width: 979px) {
		.text-content {
			.title {
				font-size: 2rem;
			}
			.subtitle {
				font-size: 1.5rem !important;
			}
		}

		.section_mobile {
			padding: 5rem 0 5rem 0;
		}
	}

	@media screen and (max-width: 768px) {
		.section_mobile{

				.card {
					gap: 5px !important;
					width: 100%;
					height: 60px !important;
				}
		}
	}



</style>
