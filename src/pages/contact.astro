---
import Layout from '../layouts/Layout.astro';

---



<Layout title="SynapsX â€¢ Contact">
    <main transition:animate="fade">
        <div class="container">
            <h1>Contact Us</h1>

            <div class="form">
                <div class="row">
                    <div class="input-group">
                        <label class="label">Email</label>
                        <input autocomplete="on" name="email" id="email" class="input" type="email">
                    </div>
                    <div class="input-group">
                        <label class="label">Name</label>
                        <input autocomplete="off" name="name" id="name" class="input" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="input-group">
                        <label for="message" class="label">Message</label>
                        <textarea autocomplete="off" name="message" id="message" class="textarea"></textarea>
                    </div>
                </div>
                <div class="row">
                    <button class="rounded" onclick="window.location.href='/partners'">
                        <span>Send</span>
                        <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 74 74"
                                height="34"
                                width="34"
                        >
                            <circle stroke-width="3" stroke="black" r="35.5" cy="37" cx="37"></circle>
                            <path
                                    fill="black"
                                    d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z"
                            ></path>
                        </svg>
                    </button>
                </div>

            </div>

        </div>

    </main>
</Layout>





<style>

    .container {
        margin: 5rem 2rem;
    }

    .form {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        gap: 1rem;
    }

    .row {
        display: flex;
        flex-flow: row wrap;
        gap: 1rem;
        justify-content: center;
    }

    .input {
        max-width: 190px;
        height: 44px;
        background-color: #05060f0a;
        border-radius: .5rem;
        padding: 0 1rem;
        border: 2px solid transparent;
        font-size: 1rem;
        transition: border-color .3s cubic-bezier(.25,.01,.25,1) 0s, color .3s cubic-bezier(.25,.01,.25,1) 0s,background .2s cubic-bezier(.25,.01,.25,1) 0s;
    }

    .textarea {
        width: 380px;
        background-color: #05060f0a;
        border-radius: .5rem;
        padding: 0 1rem;
        border: 2px solid transparent;
        font-size: 1rem;
        line-height: 25px;
        transition: border-color .3s cubic-bezier(.25,.01,.25,1) 0s, color .3s cubic-bezier(.25,.01,.25,1) 0s,background .2s cubic-bezier(.25,.01,.25,1) 0s;
    }

    .label {
        display: block;
        margin-bottom: .3rem;
        font-size: .9rem;
        font-weight: bold;
        color: #05060f99;
        transition: color .3s cubic-bezier(.25,.01,.25,1) 0s;
    }

    .input:hover, .input:focus, .input-group:hover .input {
        outline: none;
        border-color: #05060f;
    }

    .textarea:hover, .textarea:focus, .input-group:hover .textarea {
        outline: none;
        border-color: #05060f;
    }

    .input-group:hover .label, .input:focus, .textarea:focus {
        color: #05060fc2;
    }


    @media (max-width: 768px) {
        .row {
            justify-content: start;
        }
        .textarea {
            width: 100%;
        }
    }
</style>