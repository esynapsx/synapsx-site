---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="The future of EV charging" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/img/favicon/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/img/favicon/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/img/favicon/favicon-16x16.png"
		/>
		<link rel="manifest" href="/img/favicon/site.webmanifest" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header></Header>
		<slot />
		<Footer></Footer>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100;400&display=swap');

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Outfit', sans-serif;
		scroll-behavior: smooth;
		background: #ffffff;
	}

	body {
		margin: 0;
		max-width: 2000px;
		color: #333;
		text-rendering: optimizeLegibility;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	p {
		font-weight: 100;
		color: #333;
	}

	.underline-link {
		cursor: pointer;
		&:after {
			content: "";
			position: relative;
			bottom: -2px;
			left: 0;
			display: block;
			width: 100%;
			height: 1px;
			background-color: black;
			transform: scale(0, 1);
			transform-origin: 100% 50%;
			transition: transform .6s cubic-bezier(0.215, 0.61, 0.355, 1);
		}

		&:hover:after {
			transform: scale(1);
			transform-origin: 0 50%;
		}
	}

	.divider {
		width: 100%;
		height: 2px;
		background-color: rgba(223, 230, 234, 1);
		margin: 50px 0;
	}

	.btn-container {
		display: flex;
		justify-content: flex-end;
		align-items: flex-end;
		flex-grow: 1;
		padding: 20px;
	}

	.link {
		width: 100%;
		font-size: 1rem;
		text-align: end;
		span {
			text-align: center;
		}
		.hyperlink-container {
			text-decoration: none;
			color: #333;
			display: flex;
			flex-direction: row;
			justify-content: flex-end;
			align-items: center;
		}
		svg {
			position: relative;
			top: 0;
			margin-left: 10px;
			fill: none;
			stroke-linecap: round;
			stroke-linejoin: round;
			stroke: #333;
			stroke-width: 2;
			transform: translateX(-5px);
			transition: all 0.3s ease;
		}
	}

	button.rounded {
		cursor: pointer;
		transition: all 0.2s;
		padding: 10px 20px;
		border-radius: 100px;
		background: #cfef00;
		border: 1px solid transparent;
		display: flex;
		align-items: center;
		font-size: 15px;
	}

	button.rounded:hover {
		background: #c4e201;
	}

	button.rounded > svg {
		width: 34px;
		margin-left: 10px;
		transition: transform 0.3s ease-in-out;
	}

	button.rounded:hover svg {
		transform: translateX(5px);
	}

	button.rounded:active {
		transform: scale(0.95);
	}


	@keyframes opacityAndWidth {
		from {
			opacity: 1;
		}
		to {
			opacity: 0.8;
			width: 68%;
		}
	}

	@keyframes opacityAndWidthIn {
		0%   {
			font-size: 1rem;
			opacity: 0.1;
		}
		50%, 100%  {
			font-size: 2rem;
			opacity: 1;
		}
	}

	@keyframes textAnimation {
		0%, 25%   {
			opacity: 0;
		}
		30%, 100%  {
			opacity: 1;
		}
	}

	@keyframes mockupAnimation {
		0%, 25%   {
			transform: translate(100px);
			opacity: 0;
		}
		50%, 100%  {
			opacity: 1;
		}
	}
</style>
